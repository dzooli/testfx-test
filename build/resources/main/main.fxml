<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.MainController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label fx:id="displayLabel" accessibleHelp="This label shows text that changes when the button is clicked" accessibleRole="TEXT" accessibleText="Display label showing welcome message" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Welcome to JavaFX Application with FXML!" />
      <Button fx:id="changeTextButton" accessibleHelp="Click this button to change the text displayed above" accessibleRole="BUTTON" accessibleText="Change text button" mnemonicParsing="false" onAction="#handleButtonClick" style="-fx-font-size: 14px; -fx-padding: 10px 20px;" text="Click Me!" />
   </children>
</VBox>